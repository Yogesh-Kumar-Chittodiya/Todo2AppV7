<div class="col-lg-12">

    <% if employee_signed_in? %>
        <div style="color:white; background:red; height:30px;" class="p-1 text-center"> Welcome <%= current_employee.email %></div>
        <div class="col-lg-10 mx-auto mt-2">
            <%= link_to 'sign out',  destroy_employee_session_path,class: ' btn btn-outline-danger', method: :delete, data: { confirm: "are you sure? you want to sign out."}  %>
        </div>
    <% else %>
        <%= button_to 'sign in', new_employee_session_path %>
    <% end %>

    <p id="notice"><%= notice%></p>

    <div class="card col-lg-10 mx-auto mt-5 mb-2">
        <div class="card-body" style="background:red;">
            <h1 class="text-center" ><%=link_to 'Tasks', new_task_path, style: "text-decoration:none"%></h1>
        </div>
    </div>

    <table id="tsktbl" class="col-10 mx-auto table-bordered">
        <thead id="one">
            <tr>
                <th>Id</th>
                <th>Task name</th>
                <th>Task status</th>
                <th>Is active</th>
                <th colspan="3">Operations</th>
            </tr>
        </thead>

        <tbody id="two">
            <% @tasks.each do |task| %>
                <tr>
                    <td><%= task.id%></td>
                    <td><%= task.tname%></td>
                    <td><%= task.tstatus%></td>
                    <td><%= task.is_active%></td>
                    <td><%= link_to 'view', task, class: 'btn btn-info' %></td>
                    <td><%= link_to 'edit', edit_task_path(task), class: 'btn btn-primary'%> </td>
                    <td><%= link_to 'remove', task_path(task),  class: 'btn btn-danger', method: :delete, data: { confirm: "Are you sure? you want to delete this task. "} %></td>
                    
                </tr>
            <%end%>
        </tbody>
    </table>

    <div class="col-lg-10 mx-auto mt-3 mb-3">
        <%= link_to 'Create New Task', new_task_path, class: 'btn btn-primary' %>
    </div>
    
</div>

