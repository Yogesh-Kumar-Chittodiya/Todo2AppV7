
<div class="col-lg-12" style=" position:relative; top:25vh;">
    <div class="col-lg-4 border mb-1 mx-auto card p-2" style="background:red;">
        <h1 class="text-center">Task Details</h1>
    </div>

    <div class="col-lg-4 mx-auto">
        <div class="card">
            <div class="card-body" style="background:beige;">
                <p class="lead">Task id &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;: <%= @task.id %></p>
                <p class="lead">Task name &nbsp;&nbsp;&nbsp;&nbsp;: <%= @task.tname %></p>
                <p class="lead">Task status &nbsp;&nbsp;&nbsp;: <%= @task.tstatus %></p>
                <p class="lead">Task is active : <%= @task.is_active %></p>
                <%= link_to 'back', :back, class: 'col-lg-12 btn btn-outline-primary ' %>
            </div>
        </div>
    </div>
</div>
