<div class="col-lg-12">

	<%= form_with(model: task) do |form|%>

		<div class="border col-lg-4 mx-auto p-4" style="background:beige">

					<div class="row">
						<div class="form-group input-group">
							<span><%= form.label :tname, class: '' %></span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<%= form.text_field :tname, class: 'mb-3 form-control input-sm' %>
						</div>
					<div>
				<!--<div class="col-lg-4 mx-auto">
				</div>-->

					<div class="row">
						<div class="form-group input-group">	
							<%= form.label :tstatus%>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<%= form.text_field :tstatus, class: 'mb-3 form-control'  %>
						</div>
					</div>
				<!--<div class="col-lg-4">
				</div>-->

					<div class="row">
						<div class="form-group">	
							<%= form.label :Is_active %>&nbsp;&nbsp;&nbsp;
							<%= form.check_box :is_active, class: 'mb-3 checkbox'  %>
						</div>
					</div>
				<!--<div class="col-lg-4">
				</div>-->

					<div class="row">
						<div class="form-group">
							<%= form.submit class: 'btn btn-primary' %>
							<%= link_to 'back', tasks_path, class: 'btn btn-outline-primary' %>
						</div>
					</div>	
				<!--<div class="col-lg-5">	
				</div>-->

			</div>

	<%end%>

</div>